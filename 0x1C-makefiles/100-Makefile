.PHONY: all clean oclean fclean re
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
all: $(OBJ) m.h
	$(CC) -Wall -Werror -Wextra -pedantic $(OBJ) -o $(NAME)
clean:
	rm -f *~ \#*
	$(RM) $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: fclean all
